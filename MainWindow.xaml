<Window x:Class="CSVReaderTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSVReaderTask"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Read .csv file" HorizontalAlignment="Left" Height="37" Margin="628,375,0,0" VerticalAlignment="Top" Width="150"/>
        <DataGrid HorizontalAlignment="Center" Height="256" Margin="0,88,0,0" VerticalAlignment="Top" Width="664" />
        <Button Content="Export grid to Exel" HorizontalAlignment="Left" Height="37" Margin="84,375,0,0" VerticalAlignment="Top" Width="150"/>
        <Button Content="Export grid to xml" HorizontalAlignment="Left" Height="37" Margin="250,375,0,0" VerticalAlignment="Top" Width="150"/>
        <GroupBox HorizontalAlignment="Center" Height="71" Header="GroupBox" Margin="0,12,0,0" VerticalAlignment="Top" Width="664">
            <StackPanel Orientation="Horizontal" >
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Label Content="Date" HorizontalAlignment="Center"  VerticalAlignment="Top"/>
                    <StackPanel Orientation="Horizontal">
                        <DatePicker ></DatePicker>
                        <DatePicker ></DatePicker>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <Label Content="FirstName" HorizontalAlignment="Left"  VerticalAlignment="Top" />
                    <TextBox />
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <Label Content="LastName" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
                    <TextBox />
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <Label Content="SurName" HorizontalAlignment="Left"  VerticalAlignment="Top" />
                    <TextBox />
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <Label Content="City" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
                    <TextBox />
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <Label Content="Country" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
                    <TextBox />
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
